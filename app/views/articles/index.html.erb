<% if notice %>
  <div class="bg-green-100 text-green-800 border border-green-200 px-4 py-2 rounded mb-4">
    <%= notice %>
  </div>
<% end %>
<h2 class="text-2xl font-bold mb-4">Bienvenue !</h2>
<div class="mt-4">
  <a href="<%= new_article_path%>" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-4">
        Créer un article
  </a>
</div><br> <br>

<% if notice %>
  <div class="bg-green-100 text-green-800 border border-green-200 px-4 py-2 rounded mb-4">
    <%= notice %>
  </div>
<% end %>
<h2 class="text-2xl font-bold mb-4">Liste des articles</h2>
<div class="bg-white shadow-md p-4 rounded">
  <ul>
    <% if @articles.empty? %>
      <li class="text-gray-500">Aucun article trouvé.</li>
    <% else %>
      <% @articles.each do |article| %>
        <li class="border-b py-2">
          <strong>Titre de l'article :</strong> <%= article.titre %> - <strong>Status :</strong> <span class="text-red-500"><%= article.status %></span><br>
          <% if article.published_at.present? %>
      <strong>Publié le :</strong> <%= article.published_at.strftime('%d/%m/%Y à %H:%M') %><br>
    <% end %>
<div class="flex gap-[3px]">
<a href="<%= article_path(id: article.id) %>"
             class="inline-block px-3 py-2 mt-2 bg-green-600 text-white font-bold rounded-md hover:bg-green-700">
            Voir
          </a>

          <a href="<%= edit_article_path(id: article.id)%>"
             class="inline-block px-3 py-2 mt-2 bg-blue-600 text-white font-bold rounded-md hover:bg-blue-700">
            Modifier
          </a>

          <%= form_with url: article_path(article.id), method: :delete do %>
            <button type="submit"
                    class="inline-block px-4 py-2 mt-2 bg-red-600 text-white font-bold rounded-md hover:bg-red-700">
              Supprimer
            </button>
          <% end %>
</div>
          
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
