<h2 class="text-2xl font-semibold text-center mb-6 text-gray-800">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 w-full max-w-md mx-auto bg-white p-8 rounded-2xl shadow-lg" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2 text-blue-600 focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "text-gray-700 font-semibold" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in", class: "w-full py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300" %>
  </div>
<% end %>

<div class="mt-6 text-center">
  <%= render "devise/shared/links" %>
</div>
